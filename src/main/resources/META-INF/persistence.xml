<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="ToolSuitePU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <!-- 实体类 -->
        <class>io.github.lemostic.toolsuite.database.entity.ServerConfigurationEntity</class>
        <class>io.github.lemostic.toolsuite.database.entity.DeploymentHistoryEntity</class>
        
        <properties>
            <!-- 这些属性将在代码中动态设置 -->
        </properties>
    </persistence-unit>
</persistence>
